{
    "_id": "{{@ system @}}",
    "operations": {
        "customer-list": {
            "id_expression": "{{ id }}",
            "method": "GET",
            "payload_property": "customers",
            "url": "customers.json",
            "headers": {
                "X-Shopify-Access-Token": "$SECRET(oauth_access_token)"
            }
        }
    },
    "type": "system:rest",
    "url_pattern": "https://{{@ account_id @}}.myshopify.com/admin/api/2023-04/%s",
    "verify_ssl": true
}